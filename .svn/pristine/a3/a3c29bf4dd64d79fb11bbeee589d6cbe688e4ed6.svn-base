<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.learning.eng.dao.ClientBoardDao">

	<insert id="insertPointCount"
		parameterType="Map">
		INSERT INTO EN_POINT(
								ACTIVITY
						   <if test='id!=null and !id.equals("")'>
							,	ID
							</if>
							,	ACTIVITY_DATE
							<if test='point !=null and !point.equals("")'>
							,	POINT
							</if>
							,	CODE_NO
							,	SOURCE_SEQ_NO
							)
				VALUES		(
<!-- 							id 없이 퀴즈 풀이 가능하기 위해서 null check -->
							#{activity} 
							<if test='id!=null and !id.equals("")'>
							,	#{id}
							</if>
							,	SYSDATE()
							<if test='point !=null and !point.equals("")'>
							,	#{point}
							</if>
							,	#{codeNo}
							,	#{sourceSeqNo}
							)
							
	</insert>

	<select id="getPointCount"
		resultType="Integer">
		SELECT COUNT(*) 
		  FROM EN_POINT
		<where>
			<if test="id != null">
				ID = #{id}
			</if>
		</where> 
	</select>
	
	<select id="getBoardArticleCount"
		resultType="Integer">
		SELECT COUNT(*) 
		  FROM EN_BOARD
		<where>
			AND IS_DELETE='N'
			AND CODE_NO = '102' OR CODE_NO = '103' 
		</where> 
	</select>
	

	<select id="retrieveMemberPoint"
			parameterType="Map"
			resultType="Map">
		SELECT 
				  RM
				, ID
<!-- 				, POINT_SAVE_DATE -->
				, ACTIVITY_DATE
				, POINT
				, CODE_NO  
		  FROM 
		    (SELECT ROWNUM RM, EP.* 
		          FROM EN_POINT EP)
		   
		<where>
			<if test="startRow !=null and endRow != null">
				RM BETWEEN #{startRow} AND #{endRow}
			</if>
		</where>	
	</select>

	<insert id="insertExpression"
			parameterType="Map">
		INSERT INTO EN_BOARD
					(
							SEQ_NO
						,	CODE_NO
						,	ID
						,	BOARD_TITLE
					<if test="isQuiz != null and isQuiz == 'false'">
<!-- 					<if test="isQuiz != null and isQuiz == 'true'"> -->
						,	BOARD_CONTENT
					</if>
						,	BOARD_GROUP
						,	BOARD_DEPTH
						,	BOARD_HIT
						,	BOARD_CRE_DATE
						,	BOARD_MOD_DATE
						<if test='isAtch !=null and isAtch !=""'>
						,	IS_ATCH_FILE
						</if>
						,	IS_DELETE
					)
				values  
						(	null
						,	#{codeNo}
						,	#{id}
						,	#{title}
					<if test="isQuiz != null and isQuiz == 'false'">
<!-- 					<if test="isQuiz != null and isQuiz == 'true'"> -->
						,	#{content}
					</if>
						,	0
						,	0
						,	0
						,	SYSDATE()
						,	SYSDATE()
						<if test='isAtch !=null and isAtch !=""'>
						,	#{isAtch}
						</if>
						,	'N')
	</insert>
	
	<select id="retrieveRecentSeqNo"
			parameterType="Map"
			resultType="Integer">
			SELECT MAX(SEQ_NO) 
			  FROM EN_BOARD
			<where>
				<if test="id != null">
					AND ID = #{id}
				</if>
			</where>
	</select>
	
	<insert id ="insertQuizAns"
			parameterType="Map">
		INSERT INTO EN_QUIZ_ANS	(
									SEQ_NO
								,	Q_ANS_NUM
								,	Q_ANS
								,	Q_ANS_CODE
								)
						VALUES (
								#{seqNo}
								, #{ansNum}
								, #{content}
								, #{ansCode}
						)
	</insert>
	
	
	<select id="retrieveExpression"
			parameterType="Map"
			resultType="Map">
		SELECT *
		  FROM EN_BOARD
		 WHERE IS_DELETE = 'N'
		   AND CODE_NO = '102' OR CODE_NO = '103'
         ORDER BY SEQ_NO DESC
         <if test="startRow != null">
         LIMIT #{startRow}, 10
         </if>
			
