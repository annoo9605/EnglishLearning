<!--                   FROM (SELECT *  -->
<!--                           FROM EN_BOARD -->
<!--                           WHERE IS_DELETE = 'N' -->
<!--                           AND CODE_NO = '102' OR CODE_NO = '103' -->
<!--                 		 ORDER BY SEQ_NO DESC ) EB1 ) EB2 -->
